@model EmployeeViewModel
@{
    var role = ViewBag.Role;
}

<form asp-action="Edit">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" readonly="@(role == "employee" ? "readonly" : null)" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" readonly="@(role == "employee" ? "readonly" : null)" />
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" readonly="@(role == "employee" ? "readonly" : null)" />
    </div>
    <div class="form-group">
        <label asp-for="Department"></label>
        <input asp-for="Department" class="form-control" readonly="@(role == "employee" ? "readonly" : null)" />
    </div>
    @if (ViewBag.Role == "hradmin")
    {
        <div class="form-group">
            <label asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control" />
        </div>
    }
    <button type="submit" class="btn btn-success">Save</button>
</form>
